            </TableRow>
      <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >
                <com.pandeagames.www.gutterballredux.Drawing.PhotoButton
                    android:id="@+id/pinko"
                    android:background="@drawable/shadow_btn_style"
                    android:onClick="selectLevel"
                    custom:disabled="true"
                    custom:disabledIcon="@drawable/green_sphere"
                    custom:photo="@drawable/enabled_level"
                    custom:disabledPhoto="@drawable/disabled_level"
                    custom:unlockedPhoto="@drawable/unlocked_level"
                    custom:photoOnDisabled="false"
                     custom:heightRatio="@dimen/photo_button_ratio" >
                </com.pandeagames.www.gutterballredux.Drawing.PhotoButton>
      </TableRow>
    </TableLayout>
        <!--</Drawing.LinearStretchGridLayout>-->
    </com.pandeagames.www.gutterballredux.Drawing.UnlockingScrollView>

</LinearLayout>