<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/base"
    android:orientation="vertical"
     >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/low_contrast"
        android:textIsSelectable="false"
        android:textSize="50sp" />
	<ImageView 
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:src="@drawable/green_sphere"
	    />
	<TextView 
	    android:id="@+id/appleCount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/low_contrast"
        android:textIsSelectable="false"
        android:textSize="50sp" />
    <Button
        android:id="@+id/appOptions"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/shadow_btn_style"
        android:text="@string/options" >
    </Button>
       <Button
        android:id="@+id/unlockAllLevels"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/shadow_btn_style"
        android:text="@string/unlock_all" >
    </Button>

    <com.pandeagames.www.gutterballredux.Drawing.UnlockingScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
<TableLayout
    android:id="@+id/levels"
    android:stretchColumns="*"
     android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    </TableLayout>
    </com.pandeagames.www.gutterballredux.Drawing.UnlockingScrollView>

</LinearLayout>